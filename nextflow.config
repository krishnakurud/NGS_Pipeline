params {

    //input and output binary paths
    reads = "$projectDir/data/*.fastq"
    ref = "$projectDir/data/*.fa"
    outdir = "$projectDir/results"
    adapter = "AGATCGGAAGAGC"

    //Tools binary paths

    fastqc   = "/root/miniconda3/envs/bnf/bin/fastqc"
    cutadapt = "/usr/bin/cutadapt"
    bwa      = "/usr/bin/bwa"
    samtools = "/usr/bin/samtools"
    bcftools = "/usr/bin/bcftools"
    multiqc  = "/usr/bin/multiqc"
}

process {
    conda = "$baseDir/environment.yml"
}

process {
    cpus = 2
    memory = '4 GB'
    errorStrategy = 'retry'
    maxRetries = 3
}
